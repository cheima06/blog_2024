{% extends 'base.html.twig' %}

{% block title %}Hello ArticlesController!{% endblock %}

{% block body %}

<div class="card" style="width: 18rem;">
{#concatenation en twig ~ #}
  {% if article.picture== NULL %}
  <img src="{{ asset('build/images/default.png') }}" class="card-img-top" alt="...">
  {% else %}
  <img src="{{ asset('build/images/'~ article.picture) }}" class="card-img-top" alt="...">
  {% endif %}

  <div class="card-body">
    <h5 class="card-title">{{article.title}}</h5>
    <h5 class="card-title">{{ article.date|date("d-m-Y")}}</h5>
    <p class="card-text">{{article.description}}</p>
    
    

    <a href="#" class="btn btn-primary">En savoir plus</a>
  </div>
</div>

{% endblock %}
